// Minimal Declarch Configuration
// This is a basic starting point for new users

// === METADATA ===
meta {
    description "Minimal system setup"
    author "yourname"
    version "1.0.0"
    tags "minimal" "cli"
}

// === EDITOR ===
// Configure via: declarch settings set editor nano
// Or set $EDITOR environment variable

// === PACKAGES ===
// Default backend (AUR on Arch)
packages {
    // CLI essentials
    bat       // Modern cat alternative
    exa       // Modern ls alternative
    ripgrep   // Fast grep
    fd        // Fast find
    fzf       // Fuzzy finder
    zoxide    // Smart cd
}

// === OPTIONAL: CROSS-DISTRO (works on any Linux) ===
// Uncomment to use Soar static binaries instead of AUR
// packages:soar {
//     bat
//     exa
//     ripgrep
// }

