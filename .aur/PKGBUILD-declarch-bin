# Maintainer: nixval <nicovaliantoku@gmail.com>
pkgname=declarch-bin
pkgver=0.4.0
pkgrel=1
pkgdesc="Declarative package manager for Arch Linux inspired by Nix workflow (precompiled binary)"
arch=('x86_64')
url="https://github.com/nixval/declarch"
license=('MIT')
depends=('gcc-libs')
optdepends=(
    'paru: AUR helper (recommended)'
    'yay: AUR helper alternative'
    'flatpak: Flatpak support'
    'soar: Cross-distro static binary support'
)
provides=('declarch')
conflicts=('declarch' 'declarch-git')
source=("declarch-${pkgver}::${url}/releases/download/v${pkgver}/declarch")
sha256sums=('GENERATE_AFTER_RELEASE')  # Update after GitHub release

package() {
    install -Dm0755 "declarch-${pkgver}" "$pkgdir/usr/bin/declarch"

    # Install shell completions
    install -Dm0644 -t "$pkgdir/usr/share/bash-completion/completions/" \
        <("$pkgdir/usr/bin/declarch" completions bash)
    install -Dm0644 -t "$pkgdir/usr/share/zsh/site-functions/" \
        <("$pkgdir/usr/bin/declarch" completions zsh)
    install -Dm0644 -t "$pkgdir/usr/share/fish/vendor_completions.d/" \
        <("$pkgdir/usr/bin/declarch" completions fish)

    # Install documentation
    cat <<EOF > "$pkgdir/usr/share/doc/${pkgname}/README.md"
# declarch ${pkgver}

Declarative package manager for Arch Linux.

## Installation

Installed from pre-built binary release.

## Documentation

Full documentation: https://github.com/nixval/declarch
EOF

    # Use system MIT license
    install -Dm0644 "/usr/share/licenses/common/MIT/LICENSE" \
        "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
