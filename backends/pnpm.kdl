// pnpm - Fast, disk space efficient package manager
// https://pnpm.io

backend "pnpm" {
    meta {
        title "pnpm"
        description "Fast, disk space efficient package manager"
        version "1.0.0"
        author "declarch"
        tags "nodejs" "javascript" "package-manager"
        homepage "https://pnpm.io"
        license "MIT"
        created "2026-02-08"
        platforms "linux" "macos" "windows"
        requires "pnpm"
    }
    
    binary "pnpm"
    
    list "pnpm list -g --depth=0 --json 2>/dev/null" {
        format json
        json_path ""  // Root array
        name_key "name"
        version_key "version"
    }
    
    install "pnpm add -g {packages}"
    remove "pnpm remove -g {packages}"
    
    needs_sudo false
}
