// bun - Ultra-fast JavaScript runtime and package manager
// https://bun.sh

backend "bun" {
    meta {
        title "Bun"
        description "Ultra-fast JavaScript runtime and package manager"
        version "1.0.0"
        author "declarch"
        tags "nodejs" "javascript" "package-manager" "runtime"
        homepage "https://bun.sh"
        license "MIT"
        created "2026-02-08"
        platforms "linux" "macos"
        requires "bun"
    }
    
    binary "bun"
    
    list "bun pm ls -g --json" {
        format json
        json_path ""  // Root array
        name_key "name"
        version_key "version"
    }
    
    install "bun install -g {packages}"
    remove "bun remove -g {packages}"
    
    needs_sudo false
}
